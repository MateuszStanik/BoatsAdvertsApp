@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Durandal 451</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="fragment" content="!">

    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
    <link rel="apple-touch-icon" href="~/Content/images/icon.png" />

    @Styles.Render("~/Content/css")

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="image-wrapper">
            @*<i class="logo-icon"></i><h3>BoatsAd</h3>*@
            <a class="btn btn-lg addition-ad-btn pull-right" href="#advert"><span class="fa fa-plus"></span> Dodaj ogłoszenie</a>
        </div>
        
        <div id="applicationHost">
            @Html.Partial("_splash")
        </div>
    </div>
    <footer class="footer">

        <div class="content has-text-centered">
            <strong>BoatsAd</strong> by <a href="https://github.com/MateuszStanik/BoatsAdverts">Mateusz Stanik</a>
            <p>&copy; @DateTime.Now.Year - Boats Application</p>
            <p>
                <a class="icon" href="https://github.com/MateuszStanik/BoatsAdverts">
                    <i class="fa fa-github"></i>
                </a>
            </p>
        </div>
    </footer>
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script type="text/javascript" src="~/Scripts/require.js" data-main="@Url.Content("~/App/main")"></script>
    }
    else
    {
        <script type="text/javascript" src="~/App/main-built.js"></script>
    }
</body>
</html>
